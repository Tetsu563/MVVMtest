<UserControl x:Class="MVVM_DDD_DI.Presentation.View.ContentControl.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_DDD_DI.Presentation.View.ContentControl"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <Grid>
        <!-- 列を2分割 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- 左：画像表示 -->
        <Image Grid.Column="0"
               Source="pack://application:,,,/Images/outline.png"
               Stretch="Uniform"
               Margin="10" />

        <!-- 右：ボタン配置 -->
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Content="CSVファイルを読み込む"
                    FontSize="14"
                    Width="160"
                    Height="30"
                    Margin="0,10,0,20"/>
            <Button Content="データリストを表示する"
                    FontSize="14"
                    Width="160"
                    Height="30"/>
        </StackPanel>
    </Grid>
</UserControl>
